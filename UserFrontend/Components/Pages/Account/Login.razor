@page "/account/login"
@rendermode InteractiveServer

<h3></h3>
<EditForm FormName="Login" Model="_loginUserDto" OnValidSubmit="LoginUser">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="Username">Username</label>
        <InputText id="Username" class="form-control" @bind-Value="_loginUserDto.Username" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <InputText id="Password" class="form-control" @bind-Value="_loginUserDto.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <p>Don't have an account? <a href="Account/Register">Register</a></p>
    <p>Forgot your password? <a href="Account/ForgotPassword">Reset Password</a></p>
</EditForm>

@_errorMessage